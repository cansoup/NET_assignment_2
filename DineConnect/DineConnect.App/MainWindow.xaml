<Window x:Class="DineConnect.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DineConnect.App.Views"
        Title="DineConnect"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="White"
        MinWidth="600" MinHeight="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Navigation Bar -->
            <RowDefinition Height="*"/>
            <!-- Frame Content -->
        </Grid.RowDefinitions>

        <!-- App Title -->
        <TextBlock 
            Text="DineConnect" 
            FontSize="48" 
            FontWeight="Bold"
            Foreground="#4f46e5" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Margin="0,30,0,10"/>

        <!-- Navigation Bar -->
        <Border Grid.Row="1" 
                BorderBrush="#e5e7eb" 
                BorderThickness="0,0,0,1" 
                Margin="0,10,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="MyFavoritesButton" 
                        Content="My Favorites" 
                        Click="NavButton_Click" 
                        Style="{StaticResource NavButtonStyle}" 
                        Margin="5,0"/>
                <Button Name="CommunityPicksButton" 
                        Content="Community Picks" 
                        Click="NavButton_Click" 
                        Style="{StaticResource NavButtonStyle}" 
                        Margin="5,0"/>
                <Button Name="ReservationsButton" 
                        Content="Reservations" 
                        Click="NavButton_Click" 
                        Style="{StaticResource NavButtonStyle}" 
                        Margin="5,0"/>
                <Button Name="MapViewButton" 
                        Content="Map View" 
                        Click="NavButton_Click" 
                        Style="{StaticResource NavButtonStyle}" 
                        Margin="5,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content Frame -->
        <Frame Grid.Row="2" 
               x:Name="MainFrame"
               NavigationUIVisibility="Hidden"
               Margin="20"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>
    </Grid>
</Window>
