<Window x:Class="DineConnect.App.Views.Auth.LoginWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login - DineConnect" Height="400" Width="350"
        WindowStartupLocation="CenterScreen"
        Background="White" ResizeMode="CanMinimize">
    <StackPanel VerticalAlignment="Center" Margin="30">
        <TextBlock Text="DineConnect" FontSize="32" FontWeight="Bold" Foreground="#4f46e5" HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <TextBlock Text="Username" FontWeight="Medium" Margin="0,0,0,5"/>
        <TextBox x:Name="UsernameTextBox" Margin="0,0,0,15" Padding="5"/>

        <TextBlock Text="Password" FontWeight="Medium" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20" Padding="5"/>

        <Button Content="Login" Click="LoginButton_Click" HorizontalAlignment="Stretch" Padding="10" Background="#4f46e5" Foreground="White" FontWeight="Bold"/>

        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0">
            <Run Text="Don't have an account? "/>
            <Hyperlink Click="RegisterLink_Click">
                <Run Text="Register Here"/>
            </Hyperlink>"
        </TextBlock>

    </StackPanel>
</Window>
