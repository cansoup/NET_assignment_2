<Window x:Class="DineConnect.App.Views.Auth.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register - DineConnect" Height="500" Width="350"
        WindowStartupLocation="CenterScreen"
        Background="White" ResizeMode="CanMinimize">
    <StackPanel VerticalAlignment="Center" Margin="30">
        <TextBlock Text="Create Account" FontSize="28" FontWeight="Bold" Foreground="#4f46e5" HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <TextBlock Text="Username" FontWeight="Medium" Margin="0,0,0,5"/>
        <TextBox x:Name="UsernameTextBox" Margin="0,0,0,15" Padding="5"/>

        <TextBlock Text="Password" FontWeight="Medium" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,15" Padding="5"/>

        <TextBlock Text="Confirm Password" FontWeight="Medium" Margin="0,0,0,5"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,20" Padding="5"/>

        <Button Content="Register" Click="RegisterButton_Click" HorizontalAlignment="Stretch" Padding="10" Background="#4f46e5" Foreground="White" FontWeight="Bold"/>

        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0">
            <Hyperlink Click="BackToLoginHyperlink_Click">
                <Run Text="Back to Login"/>
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</Window>
