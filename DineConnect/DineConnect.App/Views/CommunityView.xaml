<UserControl x:Class="DineConnect.App.Views.CommunityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="900"
             Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360" MinWidth="300"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Create Post -->
        <Border Grid.Column="0"
                Padding="18"
                BorderBrush="#e5e7eb"
                BorderThickness="1"
                CornerRadius="8"
                Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Create Post"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"
                               Foreground="#111827"/>

                    <TextBlock Text="Title" Margin="0,0,0,6" FontWeight="Medium"/>
                    <TextBox x:Name="PostTitleText"
                             MinHeight="34"
                             Padding="6"
                             Margin="0,0,0,12"
                             TextChanged="PostInput_TextChanged"/>

                    <TextBlock Text="What's on your mind?" Margin="0,0,0,6" FontWeight="Medium"/>
                    <TextBox x:Name="PostContentText"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinLines="4"
                             Padding="8"
                             Margin="0,0,0,12"
                             TextChanged="PostInput_TextChanged"/>

                    <Button x:Name="PublishButton"
                            Content="Publish"
                            Padding="10"
                            Background="#4f46e5"
                            Foreground="White"
                            FontWeight="Bold"
                            HorizontalAlignment="Stretch"
                            IsEnabled="False"
                            Click="PublishButton_Click"/>

                    <TextBlock x:Name="LeftStatusText"
                               Margin="0,10,0,0"
                               Foreground="#065f46"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Right: Feed -->
        <Border Grid.Column="2"
                Padding="0"
                BorderBrush="#e5e7eb"
                BorderThickness="1"
                CornerRadius="8"
                Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="12,12,12,8">
                    <TextBlock Text="Community Feed"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               DockPanel.Dock="Left"
                               VerticalAlignment="Center"/>
                </DockPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="FeedList" Margin="12,0,12,12">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12" Margin="0,0,0,12"
                                        BorderBrush="#e5e7eb" BorderThickness="1"
                                        CornerRadius="8" Background="White">
                                    <StackPanel>

                                        <!-- Username -->
                                        <TextBlock Text="{Binding UserName}"
                                                   FontWeight="Bold"
                                                   Foreground="#4f46e5"
                                                   FontSize="13"
                                                   Margin="0,0,0,4"/>

                                        <!-- Post title -->
                                        <TextBlock Text="{Binding Title}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="#111827"/>

                                        <!-- Post content -->
                                        <TextBlock Text="{Binding Content}"
                                                   Margin="0,6,0,10"
                                                   TextWrapping="Wrap"
                                                   Foreground="#111827"/>

                                        <!-- Comments -->
                                        <ItemsControl ItemsSource="{Binding Comments}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Padding="8"
                                                            Margin="0,0,0,8"
                                                            Background="#f9fafb"
                                                            BorderBrush="#e5e7eb"
                                                            BorderThickness="1"
                                                            CornerRadius="6">
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding UserName}"
                                                                       FontWeight="Bold"
                                                                       Foreground="#4f46e5"
                                                                       FontSize="12"
                                                                       Margin="0,0,0,2"/>

                                                            <TextBlock Text="{Binding Content}"
                                                                       TextWrapping="Wrap"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Add comment -->
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBox Width="Auto"
                                                     MinHeight="30"
                                                     Padding="6"
                                                     HorizontalAlignment="Stretch"
                                                     Text="{Binding NewCommentText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     TextWrapping="Wrap"
                                                     MinWidth="200"/>
                                            <Button Content="Comment"
                                                    Padding="8,4"
                                                    Margin="8,0,0,0"
                                                    Background="#4f46e5"
                                                    Foreground="White"
                                                    FontWeight="Bold"
                                                    Click="AddComment_Click"/>
                                        </StackPanel>

                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <DockPanel Grid.Row="2" Margin="12,0,12,12">
                    <TextBlock x:Name="RightStatusText"
                               Foreground="#065f46"
                               TextWrapping="Wrap"/>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
