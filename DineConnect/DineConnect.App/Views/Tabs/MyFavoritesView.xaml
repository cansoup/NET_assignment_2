<UserControl x:Class="DineConnect.App.Views.MyFavoritesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left panel -->
        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <TextBlock Text="Add New Favorite" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20"/>

            <TextBlock Text="Restaurant Name" Margin="0,0,0,5"/>
            <TextBox x:Name="SearchTextBox" Padding="5" TextChanged="SearchTextBox_TextChanged"/>

            <!-- Autocomplete -->
            <ListBox x:Name="ResultsListBox" Margin="0,5,0,10" MaxHeight="150" Visibility="Collapsed" SelectionChanged="ResultsListBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="4,2">
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Address}" Foreground="Gray" FontSize="12"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock Text="Your Rating" Margin="0,10,0,5"/>
            <ComboBox x:Name="RatingComboBox" Margin="0,0,0,15" Padding="5">
                <ComboBoxItem Content="5 Stars ⭐⭐⭐⭐⭐"/>
                <ComboBoxItem Content="4 Stars ⭐⭐⭐⭐"/>
                <ComboBoxItem Content="3 Stars ⭐⭐⭐"/>
                <ComboBoxItem Content="2 Stars ⭐⭐"/>
                <ComboBoxItem Content="1 Star ⭐"/>
            </ComboBox>

            <!-- Add Button -->
            <Button x:Name="AddFavoriteButton" Content="Add to Favorites" Padding="10,5"
                    Background="#4f46e5" Foreground="White" FontWeight="Bold" Margin="0,15,0,0"
                    IsEnabled="False" Click="AddFavoriteButton_Click"/>
        </StackPanel>

        <!-- Right panel: Favorites list -->
        <Border Grid.Column="1" BorderBrush="#e5e7eb" BorderThickness="1" CornerRadius="5">
            <Grid>
                <TextBlock x:Name="NoFavoritesText" Text="No favorites added yet." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Foreground="Gray"/>

                <ListView x:Name="FavoritesListView" Visibility="Collapsed">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" Width="180" DisplayMemberBinding="{Binding Restaurant.Name}"/>
                            <GridViewColumn Header="Address" Width="220" DisplayMemberBinding="{Binding Restaurant.Address}"/>
                            <GridViewColumn Header="Rating" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Rating, StringFormat={}{0} Stars}" HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- 🔥 NEW DELETE BUTTON COLUMN (matches Reservations style) -->
                            <GridViewColumn Header="" Width="90">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Delete"
                                                Padding="4,2"
                                                Margin="4,0"
                                                Background="Transparent"
                                                BorderBrush="#d1d5db"
                                                BorderThickness="1"
                                                Foreground="#374151"
                                                FontSize="12"
                                                Cursor="Hand"
                                                Click="DeleteFavorite_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderBrush" Value="#d1d5db"/>
                                                    <Setter Property="Foreground" Value="#374151"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="Padding" Value="4,2"/>
                                                    <Setter Property="FontSize" Value="12"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#f3f4f6"/>
                                                            <Setter Property="BorderBrush" Value="#9ca3af"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>
