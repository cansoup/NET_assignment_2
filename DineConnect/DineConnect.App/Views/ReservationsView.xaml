<UserControl x:Class="DineConnect.App.Views.ReservationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360" MinWidth="300"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Booking form -->
        <Border Grid.Column="0"
                Padding="18"
                BorderBrush="#e5e7eb"
                BorderThickness="1"
                CornerRadius="8"
                Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="New Reservation"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"
                               Foreground="#111827"/>

                    <!-- Restaurant -->
                    <TextBlock Text="Restaurant"
                               Margin="0,0,0,6"
                               FontWeight="Medium"/>
                    <ComboBox x:Name="RestaurantCombo"
                              HorizontalAlignment="Stretch"
                              MinHeight="34"
                              Padding="6"
                              IsEditable="False"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Id"
                              Margin="0,0,0,12"/>

                    <!-- Date -->
                    <TextBlock Text="Date"
                               Margin="0,4,0,6"
                               FontWeight="Medium"/>
                    <DatePicker x:Name="DatePicker"
                                HorizontalAlignment="Stretch"
                                SelectedDateFormat="Long"
                                Margin="0,0,0,12"/>

                    <!-- Time -->
                    <TextBlock Text="Time"
                               Margin="0,4,0,6"
                               FontWeight="Medium"/>
                    <ComboBox x:Name="TimeCombo"
                              HorizontalAlignment="Stretch"
                              MinHeight="34"
                              Padding="6"
                              ItemStringFormat="{}{0:h:mm tt}"
                              Margin="0,0,0,12"/>

                    <!-- Party size -->
                    <TextBlock Text="Party Size"
                               Margin="0,4,0,6"
                               FontWeight="Medium"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Slider x:Name="PartySlider"
            Width="120"
            Minimum="1" Maximum="12"
            TickFrequency="1"
            IsSnapToTickEnabled="True"
            SmallChange="1" LargeChange="1"/>
                        <TextBox x:Name="PartyText"
             Width="40"
             Margin="8,0,0,0"
             TextAlignment="Center"
             Text="{Binding ElementName=PartySlider, Path=Value, Mode=TwoWay}"/>
                    </StackPanel>


                    <!-- Book button -->
                    <Button x:Name="BookButton"
                            Content="Book Reservation"
                            Padding="10"
                            Background="#4f46e5"
                            Foreground="White"
                            FontWeight="Bold"
                            HorizontalAlignment="Stretch"
                            Click="BookButton_Click"/>

                    <!-- Validation / status -->
                    <TextBlock x:Name="StatusText"
                               Margin="0,10,0,0"
                               Foreground="#065f46"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Right: existing reservations -->
        <Border Grid.Column="2"
                Padding="0"
                BorderBrush="#e5e7eb"
                BorderThickness="1"
                CornerRadius="8"
                Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header / filters -->
                <DockPanel Grid.Row="0" Margin="12,12,12,8">
                    <TextBlock Text="Your Reservations"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               DockPanel.Dock="Left"
                               VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Status:"
                                   VerticalAlignment="Center"
                                   Margin="16,0,6,0"/>
                        <ComboBox x:Name="StatusFilterCombo"
                                  Width="140"
                                  SelectionChanged="StatusFilterCombo_SelectionChanged">
                            <ComboBoxItem Content="All"/>
                            <ComboBoxItem Content="Pending"/>
                            <ComboBoxItem Content="Confirmed"/>
                            <ComboBoxItem Content="Cancelled"/>
                        </ComboBox>
                    </StackPanel>
                </DockPanel>

                <!-- Data grid -->
                <DataGrid x:Name="ReservationsGrid"
                          Grid.Row="1"
                          Margin="12,0,12,12"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          RowDetailsVisibilityMode="Collapsed"
                          EnableRowVirtualization="True"
                          ColumnWidth="*"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80" />
                        <DataGridTextColumn Header="Restaurant" Binding="{Binding RestaurantName}" Width="2*" />
                        <DataGridTextColumn Header="When" Width="2*">
                            <DataGridTextColumn.Binding>
                                <Binding Path="At" StringFormat='{}{0:dddd, MMM d, yyyy h:mm tt}' />
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Party" Binding="{Binding PartySize}" Width="100"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="140"/>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Border>
    </Grid>
</UserControl>
